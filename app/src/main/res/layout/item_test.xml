<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    >
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/back"
    android:id="@+id/test_item"
    android:clickable="true">

    <TextView
        android:id="@+id/testId"
        android:text="@string/test_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:background="#30ffffff"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_baseline_person_outline_24"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/testBPL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/testBPL"
        android:text="@string/bpl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:background="#30ffffff"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_baseline_info_24"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:padding="10dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/testId"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/testBPH"
        />

    <TextView
        android:id="@+id/testBPH"
        android:text="@string/bph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:background="#30ffffff"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_baseline_info_24"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/testBPL"
        app:layout_constraintBottom_toTopOf="@+id/testtemp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/testtemp"
        android:text="@string/temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:background="#30ffffff"
        android:drawablePadding="10dp"
        android:drawableLeft="@drawable/ic_baseline_info_24"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/testBPH"
        android:textStyle="bold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>